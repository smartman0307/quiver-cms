{{#if settings.frontPageImage }}
  <div class="full-bleed tall underlay fade-white">
      <img src="{{ settings.frontPageImage }}"/>
  </div>
{{/if }}

<div id="posts" class="posts constrained">
  <section class="posts-primary" layout="column">
    {{#each postBlocks.primary }}
      <div class="post column post-{{ @index }}" flex>
          {{> inline-post }}
      </div>
    {{/each }}
  </section>

  <section class="posts-secondary" layout-sm="column" layout-md="column" layout-gt-md="row">
    {{#each postBlocks.secondary }}
      <div class="post column post-{{ @index }}" flex>
          {{> inline-post }}
      </div>
    {{/each }}
  </section>

  <section class="posts-tertiary" layout="column">
    {{#each postBlocks.tertiary }}
      <div class="post column post-{{ @index }}" flex>
          {{> inline-post }}
      </div>
    {{/each }}
  </section>

  




</div>

