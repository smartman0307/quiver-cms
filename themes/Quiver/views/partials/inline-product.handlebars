<div class="column small-12 medium-8">
  {{#if featuredImage }}
    <div class="margin-vertical-medium">
      <a href="/product/{{ slug }}">
          {{#if featuredImage.Versions.small.Key }}
            <img src="{{s3 featuredImage.Versions.small.Key }}" alt="{{deSlug featuredImage.Name }}"/>
          {{ else }}
              <img src="{{s3 featuredImage.Key }}" alt="{{deSlug featuredImage.Name }}"/>
          {{/if }}
      </a>
    </div>
  {{/if }}
</div>



<div class="column small-12 medium-4">
  <div class="margin-vertical-medium">
    <h5 class="font-flair clearfix margin-vertical-zero-important">
      <div class="left link-secondary0">
        <a href="/product/{{ slug }}">{{ title }}</a>
      </div>
      <div class="right">${{ price }}</div>
    </h5>

    <hr class="margin-vertical-x-small">

    <ul class="inline-list clearfix">
      {{#each hashtags }}
          <li>
              <a href="/products/{{ this.key }}">#{{ this.value }}</a>
          </li>
      {{/each }}
    </ul>

    <div class="markdown">
      {{markdown description.excerpt }}
    </div>

  </div>


</div>
