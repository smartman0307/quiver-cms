                          </ul>
                      </li>
                  {{ else }}
                    {{#each settings.nav2 }}
                        <li class="{{active this.href ../url }}">
                            <a href="{{ this.href }}">{{ text }}</a>
                        </li>

                    {{/each }}
                  {{/if }}

                </ul>
            </section>

            <section class="top-bar-section">
                <ul>
                  {{#if settings.nav3Title }}
                      <li class="has-dropdown not-click">
