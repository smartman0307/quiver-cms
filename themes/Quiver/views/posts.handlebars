          </div>

      </div>

  </div>
  <ul class="post-block-tertiary column small-12 medium-8">
    {{#each postBlocks.tertiary }}
        <li class="post post-{{ @index }}">
          {{> inline-post }}
        </li>
    {{/each }}
  </ul>

    {{#if prevPage }}
        <a class="left" href="/posts/{{ prevPage }}">Previous</a>
    {{/if }}

    {{#if nextPage }}
        <a class="right" href="/posts/{{ nextPage }}">Next</a>
    {{/if }}

</div>