<div id="posts" class="posts row">
    {{#each postBlocks.primary }}
      <div class="post column small-12 post-{{ @index }}">
          {{> inline-post }}
      </div>
    {{/each }}

  <ul class="column medium-block-grid-{{ settings.secondaryPostCount }} post-block-secondary">
    {{#each postBlocks.secondary }}
        <li class="post post-{{ @index }}">
          {{> inline-post }}
        </li>
    {{/each }}

  </ul>

  <div class="column medium-4">
      <div class="hidden-for-small">
          <div class="panel">
              This is a giant block of text
